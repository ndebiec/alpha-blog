
<%= render 'shared/errors', obj: @category %>


<h1 align="center"> Create new category! </h1>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>

   <div class= "form-group">
      <div class="control-label col-sm-2"><%= f.label :name %></div>
      <div class = "col-sm-10"><%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true%></div>
   </div>     
   
    <div class= "form-group">
      <div class="col-sm-2 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary btn-md" %>
      </div>
    </div>
      
<% end %>