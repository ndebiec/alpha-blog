<h1 align = "center">Listing all Ruby Bloggers</h1>

<% @users.each do |user| %>
  <div class="row">
    <div class="well col-md-4 col-md-offset-4 center">
       <ul class="usertiles">
         <li> <%= link_to gravatar_for(user), user_path(user) %> </li>
         <li> <%= user.username %> </li>
         <li> <%= pluralize(user.articles.count, "article") if user.articles %> </li>
         <% if logged_in? && current_user.admin? %>
           <li> <%= link_to "Delete user", user_path(user), method: :delete, 
                             data: {confirm: "Are you sure you want to delete this user and all their articles?" } %></li>
         <% end %>
       </ul>
    </div>
</div>
<% end %>